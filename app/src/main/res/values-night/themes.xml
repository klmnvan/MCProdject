<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MCProdject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorSecondary">@color/button_click_dark_theme</item>
        <item name="colorSecondaryVariant">@color/button_no_click_dark_theme</item>
        <item name="colorOnBackground">@color/background_screen_dark_theme</item>
        <item name="colorSurface">@color/background_shape_dark_theme</item>
        <item name="colorError">@color/error_dark_theme</item>
        <item name="colorOnPrimary">@color/vector_res_dark_theme</item>
        <item name="colorOnSurface">@color/typography_dark_theme</item>

    </style>

    <style name="TextTitle" parent="Theme.MCProdject">
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize" tools:ignore="SpUsage">36dp</item>
    </style>

    <style name="TextBase" parent="Theme.MCProdject">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize" tools:ignore="SpUsage">17dp</item>
    </style>

    <style name="TextHint" parent="Theme.MCProdject">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextInput" parent="Theme.MCProdject">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DefaultButtonBack" parent="Theme.MCProdject">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="srcCompat">@drawable/icon_button_back</item>
        <item name="android:background">@drawable/for_vector_res__grey__null__roungeg_edges</item>
        <item name="android:padding">11dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="tint">?attr/colorPrimary</item>
    </style>

